generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  name  String
  email String

  defaultLabel String

  notifications Notification[]
  resumes       ResumeData[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

type Notification {
  type      String
  message   String
  link      String?
  createdAt DateTime @default(now())
}

// resume data table
model ResumeData {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  status String

  // resume.json fields
  basic     Basics
  skill     Skill
  work      Work[]
  education Education[]
  projects  Project[]
  awards    Award[]

  creaatedAt DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id])
  userId String @db.ObjectId
}

// basic
type Basics {
  name     String
  label    String
  image    String?
  email    String
  phone    String
  url      String
  summary  String?
  location Location
  profiles Profile[]
}

type Location {
  address     String?
  postalCode  String?
  city        String
  countryCode String?
  region      String?
}

type Profile {
  network  String
  username String
  url      String
}

// skills
type Skill {
  languages    SkillFields[]
  frameworks   SkillFields[]
  technologies SkillFields[]
  libraries    SkillFields[]
  databases    SkillFields[]
  tools        SkillFields[]
}

type SkillFields {
  name  String
  level Int
}

// work
type Work {
  id            String
  name          String
  position      String
  url           String
  startDate     String
  isWorkingHere Boolean
  endDate       String
  highlights    String
  summary       String
  years         String
}

// education
type Education {
  id             String
  institution    String
  url            String
  studyType      String
  area           String
  startDate      String
  isStudyingHere Boolean
  endDate        String
  score          String
}

// project
type Project {
  id          String
  name        String
  url         String
  languages   String
  description String
}

// award
type Award {
  id      String
  title   String
  date    String
  awarder String
  summary String
  url     String
}
